	./config.status $@

flint.pc: $(ABS_FLINT_DIR)/flint.pc.in config.status
	./config.status $@

$(SRC_DIR)/flint.h: $(ABS_SRC_DIR)/flint.h.in config.status
	./config.status $@

libtool: config.status
	./config.status $@

