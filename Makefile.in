QUIET_CC  = @echo '   ' CC  ' ' $(subst $(BUILD_DIR)/,,$@);
QUIET_CXX = @echo '   ' CXX ' ' $(subst $(BUILD_DIR)/,,$@);
QUIET_AR  = @echo '   ' AR  ' ' $@;

FLINT_DIR := $(patsubst %/,%, $(dir $(abspath $(lastword $(MAKEFILE_LIST)))))
SRC_DIR = $(FLINT_DIR)/src
BUILD_DIR = $(FLINT_DIR)/build

export FLINT_DIR
export SRC_DIR
export BUILD_DIR

AT=@

